<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SurfGallery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/text_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Snackbar -->
        <item name="snackbarStyle">@style/AppErrorSnackbarTheme</item>
        <item name="snackbarTextViewStyle">@style/AppErrorSnackbarTextViewTheme</item>
        <!-- Customize your theme here. -->
        <item name="android:windowSplashScreenAnimatedIcon">@color/transparent</item>
    </style>
</resources>