<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="errorTextColor">@color/main_red</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeErrorColor">@color/main_red</item>
        <item name="errorTextAppearance">@style/Text.Regular.12</item>
        <item name="boxBackgroundColor">@color/input_bg</item>
        <item name="hintTextColor">@color/text_grey</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        I
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <!--        <item name="boxStrokeColor">@drawable/box_stoke_color_selector</item>-->
    </style>

    <style name="LoginTextInputStyle">
        <item name="android:textAppearance">@style/Text.Medium.16</item>
    </style>

    <style name="AppErrorSnackbarTheme" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/snackbar_red</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppErrorSnackbarTextViewTheme" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Text.Medium.14</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_background</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="AppToggleButton"  parent="android:Widget.Button.Toggle">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

